# =============================================================================
# RAG-MAG Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# API Keys (REQUIRED)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-key-here
GEMINI_API_KEY=your-gemini-key-here
LLAMAPARSE_API_KEY=your-llamaparse-key-here

# -----------------------------------------------------------------------------
# LLM Provider Configuration
# -----------------------------------------------------------------------------
# Choose: 'openai' or 'gemini'
LLM_PROVIDER=gemini

# OpenAI Models (used when LLM_PROVIDER=openai)
OPENAI_LLM_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Gemini Models (used when LLM_PROVIDER=gemini)
GEMINI_LLM_MODEL=gemini-2.5-flash
GEMINI_EMBEDDING_MODEL=text-embedding-3-small

# -----------------------------------------------------------------------------
# LlamaParse Configuration
# -----------------------------------------------------------------------------
LLAMAPARSE_MODEL=openai-gpt-4-1-mini
LLAMAPARSE_REGION=na
LLAMAPARSE_PARSE_MODE=parse_page_with_agent
LLAMAPARSE_HIGH_RES_OCR=true
LLAMAPARSE_TABLE_EXTRACTION=true
LLAMAPARSE_OUTPUT_TABLES_HTML=true

# -----------------------------------------------------------------------------
# Directory Paths
# -----------------------------------------------------------------------------
DATA_DIR=./data
IMAGE_DIR=./data_images
PERSIST_DIR=./storage

# -----------------------------------------------------------------------------
# RAG Settings
# -----------------------------------------------------------------------------
SIMILARITY_TOP_K=3
CHUNK_SIZE=1024
CHUNK_OVERLAP=20

# -----------------------------------------------------------------------------
# Vector Database Configuration
# -----------------------------------------------------------------------------
# Choose: 'local', 'qdrant', 'chroma'
VECTOR_DB_TYPE=qdrant

# Qdrant Cloud Configuration
QDRANT_URL=
QDRANT_API_KEY=
QDRANT_COLLECTION=rag_documents

# -----------------------------------------------------------------------------
# Image Storage Configuration
# -----------------------------------------------------------------------------
# Storage Type: 'local' (filesystem) or 's3' (cloud storage)
IMAGE_STORAGE_TYPE=local

# Storage Format: 'url', 'base64', or 'hybrid'
# - 'url': Store only file paths/URLs (requires filesystem or S3)
# - 'base64': Encode images as base64 strings in Qdrant (recommended)
# - 'hybrid': Store thumbnails in Qdrant + full images externally
IMAGE_STORAGE_FORMAT=base64

# S3 Configuration (when IMAGE_STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=rag-mag-images

# S3-Compatible Services (MinIO, Cloudflare R2, etc.)
# Leave empty for standard AWS S3
S3_ENDPOINT_URL=

# Example for MinIO (local development):
# S3_ENDPOINT_URL=http://localhost:9000

# Example for Cloudflare R2:
# S3_ENDPOINT_URL=https://<account-id>.r2.cloudflarestorage.com

# -----------------------------------------------------------------------------
# Configuration Examples
# -----------------------------------------------------------------------------

# Example 1: Local Development (Default)
# VECTOR_DB_TYPE=local
# IMAGE_STORAGE_TYPE=local
# IMAGE_STORAGE_FORMAT=url

# Example 2: Qdrant + Local Images
# VECTOR_DB_TYPE=qdrant
# QDRANT_URL=http://localhost:6333
# IMAGE_STORAGE_TYPE=local
# IMAGE_STORAGE_FORMAT=url

# Example 3: Qdrant + Base64 Images (All in Vector DB)
# VECTOR_DB_TYPE=qdrant
# QDRANT_URL=http://localhost:6333
# IMAGE_STORAGE_TYPE=local
# IMAGE_STORAGE_FORMAT=base64

# Example 4: Qdrant + S3 (Production)
# VECTOR_DB_TYPE=qdrant
# QDRANT_URL=https://your-cluster.qdrant.io
# QDRANT_API_KEY=your-qdrant-key
# IMAGE_STORAGE_TYPE=s3
# IMAGE_STORAGE_FORMAT=url
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# S3_BUCKET_NAME=rag-mag-images

# Example 5: Qdrant + S3 with Thumbnails (Hybrid)
# VECTOR_DB_TYPE=qdrant
# QDRANT_URL=https://your-cluster.qdrant.io
# IMAGE_STORAGE_TYPE=s3
# IMAGE_STORAGE_FORMAT=hybrid  # Thumbnails in Qdrant, full images in S3

